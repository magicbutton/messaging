{
  "name": "@magicbutton.cloud/messaging",
  "version": "1.1.2",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "private": false,
  "files": [
    "dist/**",
    "docs/api/**",
    "docs/markdown/**",
    "prompts/**",
    "USAGE.md",
    "PROJECT_STRUCTURE.md"
  ],
  "scripts": {
    "build": "tsup index.ts --format cjs,esm --dts --target=es2020 && npm run docs",
    "dev": "tsup index.ts --format cjs,esm --watch --dts --target=es2020",
    "lint": "eslint .",
    "clean": "rm -rf dist docs/api docs/markdown",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc && npm run docs:markdown",
    "docs:watch": "typedoc --watch",
    "docs:markdown": "typedoc --plugin typedoc-plugin-markdown --out docs/markdown",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "uuid": "^9.0.0",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@swc/core": "^1.3.96",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "eslint": "^8.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
